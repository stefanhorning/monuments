- model_class = Album
.page-header
  %h1 My Albums
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:public)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @albums.each do |album|
      %tr
        %td= link_to album.name, album_path(album)
        %td= album.public ? "Yes" : "No"
        %td=l album.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_album_path(album), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), album_path(album), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_album_path, :class => 'btn btn-primary'
